<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/temaclor"
    android:orientation="vertical"
    tools:context=".Falbaktir.FalMenu">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Fotoğraf Yükle"
        android:fontFamily="@font/poppins_extrabold"
        android:layout_margin="15dp"/>

    <LinearLayout
        android:layout_margin="5dp"

        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linearcard1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="2dp"> <!-- Sağ tarafa margin ekleyerek boşluk oluşturuyoruz -->
            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_margin="6dp"
                app:cardCornerRadius="9dp"
                android:elevation="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/baseline_camera_alt_24"
                    android:orientation="vertical">
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearcard2"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginHorizontal="2dp"> <!-- Her iki tarafa margin ekleyerek boşluk oluşturuyoruz -->
            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_margin="6dp"
                app:cardCornerRadius="9dp"
                android:elevation="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/baseline_camera_alt_24"
                    android:orientation="vertical">
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearcard3"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="2dp"> <!-- Sol tarafa margin ekleyerek boşluk oluşturuyoruz -->
            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:layout_margin="6dp"
                app:cardCornerRadius="9dp"
                android:elevation="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/baseline_camera_alt_24"
                    android:orientation="vertical">
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="Fincan ve tabağının resmini yükle"
        android:textSize="16sp" />


    <androidx.cardview.widget.CardView
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:elevation="3dp"
        app:cardCornerRadius="9dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/poppins_extrabold"
                android:gravity="center"
                android:text="SANAL FİNCAN"
                android:textSize="16sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="Kahvem yok diye üzülme sanal fincana tıklıyarak falına bakablirsin"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_gravity="bottom"
        android:layout_marginBottom="40dp">



        <androidx.cardview.widget.CardView

            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center"
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:elevation="3dp"
            app:cardCornerRadius="9dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_extrabold"
                    android:gravity="center"
                    android:text="GÖNDER"
                    android:textSize="16sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>